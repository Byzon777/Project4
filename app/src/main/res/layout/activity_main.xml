<!-- app/src/main/res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Deductions calculator"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etGross"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gross Salary"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/etStatePct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="State Tax %"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/cbSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social Security (6%)"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/cbMedicare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicare (1.5%)"/>

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="16dp"/>

</LinearLayout>
